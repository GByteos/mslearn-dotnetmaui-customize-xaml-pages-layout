<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TipCalculator"
             x:Class="TipCalculator.MainPage">
    <Grid RowDefinitions="30,Auto,Auto,*,Auto,Auto,Auto,Auto"
          ColumnDefinitions="*,*" Padding="40">

        <Label Text="Bill" />
        <Entry x:Name="billInput" Placeholder="Enter Amount" Keyboard="Numeric" Grid.Column="1"/>

        <Label Text="Tip" Grid.Row="1"/>
        <Label x:Name="tipOutput" Text="0.00" Grid.Row="1" Grid.Column="1"/>

        <Label Text="Total" Grid.Row="2"/>
        <Label x:Name="totalOutput" Text="0.00" Grid.Row="2" Grid.Column="1"/>

        <Label Text="Tip Percentage" Grid.Row="4"/>
        <Label x:Name="tipPercent" Text="15%" Grid.Row="4" Grid.Column="1"/>
        <Slider x:Name="tipPercentSlider" Minimum="0" Maximum="100" Value="15" Grid.Row="5" Grid.ColumnSpan="2"/>

        <Button Text="15%" Clicked="OnNormalTip" Grid.Row="6" Margin="0,0,5,10"/>
        <Button Text="20%" Clicked="OnGenerousTip" Grid.Row="6" Grid.Column="1" Margin="5,0,0,10"/>

        <Button x:Name="roundDown" Text="Round Down" Grid.Row="7" Margin="0,0,5,0"/>
        <Button x:Name="roundUp"   Text="Round Up" Grid.Row="7" Grid.Column="1" Margin="5,0,0,0"/>
    </Grid>
</ContentPage>
